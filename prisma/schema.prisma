generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Study {
  id          String     @id @default(uuid())
  nickname    String     @db.VarChar(12)
  study_name  String     @db.VarChar(20)
  description String?    @db.VarChar(100)
  background  String     @db.VarChar(50)
  password    String     @db.VarChar(24)
  point       Int
  createdAt   DateTime   @default(now())
  updatedAt   DateTime   @updatedAt
  Emoticons   Emoticon[]
  Habit       Habit[]
}

model Emoticon {
  id       String @id @default(uuid())
  Study    Study  @relation(fields: [study_id], references: [id], onDelete: Cascade)
  study_id String
  emo_num  Int
  count    Int
}

model Habit {
  id                 String               @id @default(uuid())
  Study              Study                @relation(fields: [study_id], references: [id], onDelete: Cascade)
  study_id           String
  name               String               @db.VarChar(30)
  deleted            Boolean
  createdAt          DateTime             @default(now())
  updatedAt          DateTime             @updatedAt
  Habit_Success_Date Habit_Success_Date[]
}

model Habit_Success_Date {
  id        String   @id @default(uuid())
  Habit     Habit    @relation(fields: [habit_id], references: [id], onDelete: Cascade)
  habit_id  String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}
